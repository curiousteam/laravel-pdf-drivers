{
    "name": "curiousteam/laravel-pdf-drivers",
    "description": "Driver-based PDF generator for Laravel (mPDF, Dompdf, Html2Pdf) with a unified API.",
    "keywords": [
        "curiousteam",
        "laravel",
        "Dompdf",
        "mPDF",
        "Html2Pdf",
        "laravel-pdf-drivers"
    ],
    "type": "library",
    "homepage": "https://github.com/curiousteam/laravel-pdf-drivers",
    "license": "MIT",
    "authors": [
        {
            "name": "Curious Team",
            "email": "curiousteambd@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0||^12.0",
        "mpdf/mpdf": "^8.2"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0.0||^9.0.0"
    },
    "autoload": {
        "psr-4": {
            "Curiousteam\\LaravelPdfDrivers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Curiousteam\\LaravelPdfDrivers\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Curiousteam\\LaravelPdfDrivers\\LaravelPdfDriversServiceProvider"
            ],
            "aliases": {
                "Pdf": "Curiousteam\\LaravelPdfDrivers\\Facades\\LaravelPdfDrivers"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
